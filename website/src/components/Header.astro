---
interface Props {
  title: string;
  firstLink: string;
  secondLink: string;
  thirdLink: string;
}

const { title, firstLink, secondLink, thirdLink } = Astro.props;
---

<header
  class="w-full fixed top-0 left-0 md:p-8 lg:p-8 p-4 md:px-20 lg:px-20 bg-white/30 backdrop-blur-md border-b border-zinc-200 flex items-center justify-between"
>
  <div id="left">
    <a href="/" class="font-bold md:text-3xl lg:text-3xl text-lg">
      <span>{title}</span>
    </a>
  </div>
  <div id="right" class="flex items-center gap-3">
    <a
      href={firstLink}
      class="text-lg font-medium text-gray-500 hover:text-black">Features</a
    >
    <a
      href={thirdLink}
      class="text-lg font-medium text-gray-500 hover:text-black">Pricing</a
    >
    <a
      href={secondLink}
      class="text-lg font-medium text-gray-500 hover:text-black">Twitter</a
    >
  </div>
</header>
